<html>
    <head>
        <title>Update Game</title>
    </head>
    <body>
        <h1>Updating <%=game_name %></h1>
        <form action="/update/<%=game_id%>" method="post">
            <div>
                <label for="name">Game Title</label>
                <div><input type="text" name="name" id="name" value="<%= game_name%>"></div>
            </div>
            <div>
                <label for="platforms">Platform(s)</label>
                <div>
                    <input type="checkbox" name="platforms" id="PC" value="PC"
                        <% if (platforms && platforms.includes("PC")) { %> checked <% } %> >
                    <label for="pc">PC</label>
                    <input type="checkbox" name="platforms" id="GameCube" value="GameCube"
                        <% if (platforms && platforms.includes("GameCube")) { %> checked <% } %> >
                    <label for="GameCube">GameCube</label>
                    <input type="checkbox" name="platforms" id="PS2" value="PS2"
                        <% if (platforms && platforms.includes("PS2")) { %> checked <% } %> >
                    <label for="PS2">PS2</label>
                    <input type="checkbox" name="platforms" id="Xbox" value="Xbox"
                        <% if (platforms && platforms.includes("Xbox")) { %> checked <% } %> >
                    <label for="Xbox">Xbox</label>
                </div>
            </div>
            <div>
                <label for="genres">Genre(s)</label>
                <div>
                    <input type="checkbox" name="genres" id="FPS" value="FPS"
                        <% if (genres && genres.includes("FPS")) { %> checked <% } %> >
                    <label for="FPS">FPS</label>
                    <input type="checkbox" name="genres" id="Puzzle" value="Puzzle"
                        <% if (genres && genres.includes("Puzzle")) { %> checked <% } %> >
                    <label for="Puzzle">Puzzle</label>
                </div>
            </div>
            <button type="submit">Submit</button>
        </form>
    </body>
</html>